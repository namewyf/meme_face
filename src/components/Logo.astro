---
// Logo component for Meme Face website
export interface Props {
	variant?: 'default' | 'light';
	size?: 'sm' | 'md' | 'lg';
}

const { variant = 'default', size = 'md' } = Astro.props;
const textColor = variant === 'light' ? 'text-white' : 'text-purple-600';

// Size mappings
const sizeMap = {
	sm: { icon: 'w-6 h-6', text: 'text-lg' },
	md: { icon: 'w-8 h-8', text: 'text-2xl' },
	lg: { icon: 'w-12 h-12', text: 'text-3xl' }
};

const currentSize = sizeMap[size];
---

<div class="flex items-center space-x-2">
  <!-- SVG Logo Icon -->
  <svg class={`${currentSize.icon} ${textColor}`} viewBox="0 0 32 32" fill="currentColor">
    <defs>
      <linearGradient id="faceGradient" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" style="stop-color:#8B5CF6;stop-opacity:1" />
        <stop offset="100%" style="stop-color:#A855F7;stop-opacity:1" />
      </linearGradient>
    </defs>
    
    <!-- Face outline with gradient -->
    <circle cx="16" cy="16" r="14" fill="none" stroke="url(#faceGradient)" stroke-width="2"/>
    
    <!-- Eyes with gradient -->
    <circle cx="12" cy="13" r="2" fill="url(#faceGradient)"/>
    <circle cx="20" cy="13" r="2" fill="url(#faceGradient)"/>
    
    <!-- Eyebrows (slightly raised for meme effect) -->
    <path d="M10 10 Q12 8 14 10" stroke="url(#faceGradient)" stroke-width="1.5" fill="none"/>
    <path d="M18 10 Q20 8 22 10" stroke="url(#faceGradient)" stroke-width="1.5" fill="none"/>
    
    <!-- Mouth (slight smile) -->
    <path d="M12 20 Q16 22 20 20" stroke="url(#faceGradient)" stroke-width="2" fill="none"/>
    
    <!-- Tongue sticking out (meme style) -->
    <ellipse cx="16" cy="22" rx="1.5" ry="2" fill="url(#faceGradient)"/>
  </svg>
  
  <!-- Text Logo -->
  <span class={`font-bold ${currentSize.text} ${variant === 'light' ? textColor : 'bg-gradient-to-r from-purple-600 to-purple-800 bg-clip-text text-transparent'}`}>
    Meme Face
  </span>
</div> 